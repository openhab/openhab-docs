        <label>Intensity meter 3 (amps)</label>
        <properties>
          <property name="binding:*:DecimalType">COMMAND_CLASS_METER:3;type=E_A</property>
        </properties>
      </channel>
      <channel id="meter_powerfactor3" typeId="meter_powerfactor">
        <label>Power factor 3</label>
        <properties>
